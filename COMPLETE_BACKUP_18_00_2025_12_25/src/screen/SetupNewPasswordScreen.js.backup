        resizeMode: 'cover',
        opacity: isDark ? 0.3 : 1,
    },
    avatarWrapper: {
        marginTop: height * 0.25,
        backgroundColor: theme.card,
        borderRadius: 60,
        padding: 4,
        ...Platform.select({
            ios: {
                shadowColor: '#000',
